# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/auth_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
JWT_ACCESS_TOKEN_EXPIRES_IN="1h"
JWT_REFRESH_TOKEN_EXPIRES_IN="30d"
JWT_ISSUER="https://auth.example.com"
JWT_AUDIENCE="https://api.example.com"

# Server
PORT=3000
NODE_ENV=development

# Email (optional - for email verification)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-password"
EMAIL_FROM="noreply@example.com"

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_LOGIN_WINDOW_MS=300000
RATE_LIMIT_LOGIN_MAX_REQUESTS=5
RATE_LIMIT_SIGNUP_WINDOW_MS=3600000
RATE_LIMIT_SIGNUP_MAX_REQUESTS=10
